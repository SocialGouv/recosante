{
  "name": "api_node",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "npm run prisma-setup && npm run format && npm run ts:check && cross-env NODE_ENV=development npx prisma db push && tsx watch ./src/index.ts",
    "create-migration": "cross-env NODE_ENV=development npx prisma migrate dev --name",
    "start": "npm run prisma-deploy && NODE_ENV=production tsx ./src/index.ts",
    "prisma-setup": "prisma generate && prisma migrate deploy",
    "prisma-create-migration": "NODE_ENV=development npx prisma migrate dev --name",
    "prisma-deploy": "NODE_ENV=production npx prisma migrate deploy",
    "ts:check": "tsc",
    "format": "prettier --write . --ignore-unknown"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "@sentry/node": "^7.84.0",
    "@sentry/tracing": "^7.84.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "node-pushnotifications": "^2.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "20.10.3",
    "pre-commit": "^1.2.2",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^5.6.0",
    "ts-node": "10.9.1",
    "tsx": "^4.7.0",
    "typescript": "5.3.2"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-prisma"
    ],
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "pre-commit": [
    "format",
    "ts:check"
  ]
}
